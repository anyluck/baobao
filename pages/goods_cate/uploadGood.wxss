.menu {
  display: flex;
  flex-direction: row;
  background-color: white;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 45px;
  margin-bottom: 0px;
  /* border-color: darkgreen; */
}

.weui_cell {
  position: relative;
  display: flex;
  padding: 15px;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  border-bottom: 1px solid #dadada;
}

.weui_cell_hd {
  display: inline-block;
  width: 20px;
  margin-right: 5px;
}

.weui_cell_hd image {
  width: 100%;
  height: 20px;
  vertical-align: -2px;
}

.weui_cell_bd {
  display: inline-block;
}

.weui_cell_bd_p {
  font-size: 14px;
  color: #939393;
}

.showModule {
  /* 用样式控制隐藏 visibility: hidden;*//* flex 布局 */
  display: flex;
  justify-content: center;
  align-items: center;
  /* 生成绝对定位的元素，相对于浏览器窗口进行定位 */
  position: fixed;
  /* 如果 height,width 不变的情况下，left,top 不用修改 */
  left: 35%;
  top: 40%;
  height: 20vh;
  width: 30vw;
  /* 不透明 */
  opacity: 0.99;
  background-color: #7b7b7b;
  /* 圆角 */
  border-radius: 30px;
}

.showModule .text {
  /* flex 布局 */
  display: flex;
  /* 字体加粗 */
  font-weight: bold;
  color: white;
  font-size: 13pt;
  font-family: "微软雅黑";
  /* Helvetica,
   Arial,
   Hiragino Sans GB,
   Source Han Sans CN,
   PingFang SC,
   Roboto,
   微软雅黑,
   Heiti SC,
   Microsoft Yahei,
   sans-serif; */
}

.evaluate-con .score {
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
  font-size: 28px;
  color: #282828;
  padding: 48px 30px 65px 30px;
}

.evaluate-con .score .item~.item {
  margin-top: 30px;
}

.evaluate-con .score .item .starsList {
  padding: 0 35px 0 40px;
}

.evaluate-con .score .item .starsList .iconfont {
  font-size: 40px;
  color: #aaa;
}
.iconfont {
  font-size: 40px;
  color: #aaa;
}

.evaluate-con .score .item .starsList .iconfont~.iconfont {
  margin-left: 20px;
}

.evaluate-con .score .item .evaluate {
  color: #aaa;
  font-size: 24px;
}

.evaluate-con .score .textarea {
  width: 690px;
  background-color: #fafafa;
  border-radius: 10px;
  margin-top: 48px;
  margin-left: 20px;
}

.evaluate-con .score .textarea textarea {
  font-size: 28px;
  padding: 38px 30px 0 30px;
  width: 100%;
  box-sizing: border-box;
  height: 160px;
}

.evaluate-con .score .textarea .placeholder {
  color: #bbb;
  height: 30px;
}

.evaluate-con .score .textarea .list {
  margin-top: 25px;
  padding-left: 5px;
}

.evaluate-con .score .textarea .list .pictrue {
  width: 140px;
  height: 140px;
  margin: 0 0 35px 25px;
  position: relative;
  font-size: 22px;
  color: #bbb;
}


.evaluate-con .score .textarea .list .pictrue:nth-last-child(1) {
  border: 1px solid #ddd;
  box-sizing: border-box;
}

.evaluate-con .score .textarea .list .pictrue image {
  width: 100%;
  height: 100%;
  border-radius: 3px;
}

.evaluate-con .score .textarea .list .pictrue .icon-guanbi1 {
  font-size: 45px;
  position: absolute;
  top: -20px;
  right: -20px;
}

.evaluate-con .score .textarea .list .pictrue .icon-icon25201 {
  color: #bfbfbf;
  font-size: 50px;
}

.evaluate-con .score .evaluateBnt {
  font-size: 30px;
  color: #fff;
  width: 690px;
  height: 86px;
  border-radius: 43px;
  text-align: center;
  line-height: 86px;
  margin-top: 45px;
}
